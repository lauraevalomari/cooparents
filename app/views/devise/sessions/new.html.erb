<div class="devise-container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4">
      <div class="form-design">
        <h2>Connexion</h2>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email, :label => 'Adresse e-mail',
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
                <%= f.input :password, :label => 'Mot de passe',
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
                <%= f.input :remember_me, :label => 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Me connecter", class: "btn btn-primary btn-lg" %>
              <% end %>
              </div>

<div class="form-links">
  <%= render "devise/shared/links" %>
</div>
      </div>
