<div data-controller="welcome">
<div class="welcome-container" data-welcome-target="welcome">
  <%= image_tag("icons/CooParents.webp", alt: "Cooparents Logo", class: "logo") %>
</div>

<div class="devise-container d-none" data-welcome-target="devise">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4">
      <div class="form-design-devise">
        <h3 style="font-weight: bold">Connexion</h3>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, :label => 'Adresse e-mail',
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password, :label => 'Mot de passe',
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, :label => 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Me connecter", class: "btn btn-primary btn-lg" %>
          <% end %>
          </div>

          <div class="form-links">
            <%= render "devise/shared/links" %>
          </div>
      </div>
    </div>
  </div>
</div>
</div>
