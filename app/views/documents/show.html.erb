<div class="row justify-content-center main-container">
  <div class="col-12 col-sm-4">
    <div class="form-design">
        <div class="header-show">
          <p>Aujourd'hui, <%= I18n.l Date.today, format: '%-d %B', locale: :fr %></p>
            <%# <%= link_to edit_document_path(@document), style: "color: black !important", class: "text-decoration-none" do %>
            <i class="fas fa-ellipsis-vertical" title="Cliquer pour modifier" style="font-size: 25px; margin-top: 10px"></i>
            <%# <% end %>
          </div>

    <div>
      <h3 class="mt-2" style="font-weight: bold">Mon document</h3>
      <h4 class="mt-2" style="font-size: 18px"><%= @document.title %></h4>
    </div>
    <div>

    </div>
    <div class="flexbox card-task pt-4 doc-card">
      <p style="color: grey"><i class="fa-solid fa-folder-tree"style="color: #adafb3"></i> Catégorie</p>
      <% if @document.category == "Scolarité" %>
            <div class="category-class-violet">
            <p style="padding-bottom: 5px">Scolarité</p></div>
      <% elsif @document.category == "Santé" %>
            <div class="category-class-turquoise">
            <p style="padding-bottom: 5px">Santé</p></div>
      <% elsif @document.category == "Activités" %>
            <div class="category-class-pink">
            <p style="padding-bottom: 5px">Activités</p></div>
      <% elsif @document.category == "Juridique" %>
            <div class="category-class-yellow">
            <p style="padding-bottom: 5px">Juridique</p></div>
      <% else %>
            <div class="category-class-green">
            <p style="padding-bottom: 5px">Autres</p></div>
      <% end %>
      </div>

    <% if @document.doctype.present? %>
      <div class="flexbox card-task">
        <p style="color: grey"><i class="fa-solid fa-file-circle-question"style="color: #adafb3"></i> Nature du document</p>
        <p><%= @document.doctype %></p>
      </div>
    <% end %>


      <div class="flexbox card-task">
        <p style="color: grey"><i class="fa-solid fa-file-circle-question"style="color: #adafb3"></i> Document ajouté par</p>
        <p> <%= @document.document_creator.email.split('@').first.capitalize %></p>
      </div>

    <% if @document.child.present? %>
      <div class="flexbox card-task">
        <p style="color: grey"><i class="fa-solid fa-children"style="color: #adafb3"></i> Ce document concerne</p>
        <p><%= @document.child.first_name %></p>
      </div>
    <% end %>

    <% if @document.rich_details.present? %>
      <div class="flexbox card-task">
        <p style="color: grey"><i class="fa-duotone fa-comments"style="color: #adafb3"></i> Commentaires <%= @document.rich_details %> </p>
      </div>
    <% end %>

      <div class="flexbox card-task">
          <p style="color: grey"><i class="fa-solid fa-cloud-arrow-down" style="color: #F0000 download-icon"></i> </p>
          <p > <%= link_to "Télécharger le document", rails_blob_path(@document.attachment, disposition: "attachment") %></p>
      </div>

      <div class="show-icons mt-5">
            <%= link_to documents_path, style: "color: black !important", class: "text-decoration-none" do %>
              <i class="fa-solid fa-arrow-left" style="color: #89DB93; font-size: 30px; margin-top: 10px"></i>
            <% end %>

    </div>

    </div>
  </div>
</div>
