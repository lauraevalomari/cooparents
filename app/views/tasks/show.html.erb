<div class="row justify-content-center main-container">
  <div class="col-12 col-sm-4">
    <div class="form-design">
          <div class="header-show">
            <p style="font-weight: bold; margin-top: 5px">Aujourd'hui, <%= I18n.l Date.today, format: '%-d %B', locale: :fr %></p>
            <%= link_to "Retour", tasks_path, class: "btn-back" %>
          </div>

      <h3 class="mt-2" style="font-weight: bold">Ma tâche</h3>
      <h4 class="mt-2" style="font-size: 18px"><%= @task.title %></h4>
      <div class="flexbox card-task pt-4">
        <p><%= image_tag "children.png", width: 30, height: 40 %></p>
        <p><%= @task.child.first_name %></p>
      </div>

      <div class="flexbox card-task">
        <p> <%= image_tag "dossier.png", width: 30, height: 25 %></p>
        <p><%= @task.category %></p>
      </div>

      <div class="flexbox card-task">
        <p><%= image_tag "sablier.png", width: 30, height: 30 %></p>
        <p><%= @task.deadline.strftime ("%d/%m/%Y") %></p>
      </div>

      <div class="flexbox card-task">
         <p><%= image_tag "completer.png", width: 20, height: 30 %></p>
        <% if @task.status == true %>
          <p>Terminé</p>
        <% elsif @task.status == false %>
          <p>En cours</p>
        <% end %>
      </div>

      <div class="flexbox card-task">
        <p style="text-align: start; width: 30px; height: 20px"><%= image_tag "document.png" %></p>
        <p style="text-align: end"><%= @task.details %></p>
      </div>

      <div class="flexbox card-task">
        <p style="text-align: start; width: 35px; height: 25px"><%= image_tag "point-dexclamation.png" %></p>
        <p style="text-align: end"><%= @task.requirements %></p>
      </div>

      <div class="margin-top: 50px !important">
       <% unless @task.status? %>
        <div class="mt-5"><%= link_to "Marquer comme terminée",
            task_path(id: @task, status: true),
            class: "btn-delete",
            data: { turbo_method: :patch, turbo_confirm: "Êtes-vous sûr(e)?"} %></div>
       <% else %>
          <div class="btn-delete mt-5">Terminée!</div>
       <% end %>

      <div class="mt-4"><%= link_to "Modifier",
          edit_task_path(@task),
          class: "btn-delete"%>
      </div>

      <div class="mt-4"><%= link_to "Supprimer cette tâche",
          task_path(@task),
          class: "btn-delete",
          data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr(e)?"} %>
      </div>
      </div>
    </div>
  </div>
</div>
