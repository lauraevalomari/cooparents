<div class="row justify-content-center main-container">
  <div class="col-12 col-sm-4">
    <div class="form-design">
          <div class="header-show">
            <p>Aujourd'hui, <%= I18n.l Date.today, format: '%-d %B', locale: :fr %></p>
            <%= link_to "Retour", :back, class: "btn-back" %>
          </div>
      <h3 style="border-bottom: 1px solid"><%= @task.title %></h3>
      <p style="margin-top: 16px !important">Pour qui? <%= @task.child.first_name %></p>
      <p>Détails: <%= @task.details %></p>
      <p>Pré-requis: <%= @task.requirements %></p>
      <% if @task.deadline.present? %>
        <p><i class="fa-solid fa-hourglass-start" style="color: #EACF99"></i> Date limite:  <%= @task.deadline.strftime ("%d/%m/%Y") %></p>
      <% end %>

      <div class="margin-top: 50px !important">
       <% unless @task.status? %>
        <div class="mt-5"><%= link_to "Marquer comme terminée",
            task_path(id: @task, status: true),
            class: "btn-delete",
            data: { turbo_method: :patch, turbo_confirm: "Êtes-vous sûr(e)?"} %></div>
       <% else %>
          <span class="btn-update mt-5">Terminée!</span>
       <% end %>

        <div class="mt-3"><%= link_to "Supprimer cette tâche",
          task_path(@task),
          class: "btn-delete",
          data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr(e)?"} %>
        </div>
      </div>


    </div>
  </div>
</div>
