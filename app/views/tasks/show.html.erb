<div class="row justify-content-center main-container">
  <div class="col-12 col-sm-4">
    <div class="form-design">
        <div class="header-show">
          <p>Aujourd'hui, <%= I18n.l Date.today, format: '%-d %B', locale: :fr %></p>
          <%= link_to "Retour", tasks_path, class: "btn-back" %>
        </div>
      <div class="top-icons">
        <%= link_to task_path(@task),
                style: "color: black !important; margin-bottom: 5px",
                class: "text-decoration-none",
                data: { turbo_method: :delete, turbo_confirm: "Êtes-vous sûr(e)?" } do %>
              <i class="fa-solid fa-trash" style="font-size: 20px; margin-top: 10px"></i>
            <% end %>
        <h3 style="font-weight: bold; margin-top: 10px">Ma tâche</h3>
        <%= link_to edit_task_path(@task), style: "color: black !important", class: "text-decoration-none" do %>
          <i class="fas fa-ellipsis-vertical" title="Clique pour modifier" style="font-size: 25px; margin-top: 10px"></i>
        <% end %>
      </div>
      <div>
        <h4 class="mt-3" style="font-size: 18px"><%= @task.title %></h4>
      </div>

      <div class="status-flag p-1">
        <p></p>
        <% if @task.status == false %>
          <div class="category-class-yellow">
          <p style="font-size: 13px; margin-bottom: 4px !important">En cours</p></div>
        <% elsif %>
        <div class="category-class-green">
          <p style="font-size: 13px; margin-bottom: 4px !important">Terminée</p></div>
        <% end %>
      </div>

      <div class="flexbox card-task pt-2">
        <p><%= image_tag "children.png", width: 30, height: 40 %></p>
        <p><%= @task.child.first_name %></p>
      </div>

      <div class="flexbox card-task">
        <p> <%= image_tag "dossier.png", width: 30, height: 25 %></p>
        <p><%= @task.category %></p>
      </div>

      <div class="flexbox card-task">
        <p><%= image_tag "sablier.png", width: 30, height: 30 %></p>
        <p><%= @task.deadline.strftime ("%d/%m/%Y") %></p>
      </div>

      <% if @task.rich_details.present? %>
        <div class="card-task-details" style="font-size: 15px !important">
          <p><strong><%= @task.rich_details %></p></strong>
        </div>
      <% elsif %>

      <% end %>

       <% unless @task.status? %>
        <div class="mt-5" style="width: 100%"><%= link_to "Marquer comme terminée",
            task_path(id: @task, status: true),
            class: "btn-update",
            style: "width: 100% !important",
            data: { turbo_method: :patch } %></div>
       <% else %>

       <% end %>
      </div>
    </div>
  </div>
</div>
