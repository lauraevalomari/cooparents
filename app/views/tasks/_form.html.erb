<%= simple_form_for @task, data: { controller: 'flatpickr' } do |f| %>
  <%= f.input :category,
              label: 'Catégorie',
              as: :radio_buttons,
              collection_wrapper_tag: 'div',
              collection_wrapper_class: 'category-wrapper',
              item_wrapper_class: 'category-item',
              input_html: {class: 'category-selector'},
              collection: Task::CATEGORIES %>
  <%= f.input :title, :label => 'Intitulé de la tâche' %>
  <%= f.input :parent_in_charge_id, :label => 'Parent en charge de cette tâche' %>
  <%= f.input :deadline, :label => "Date d'échéance", as: :string, input_html: { data: { flatpickr_target: "date" }, id: 'date' } %>
  <%= f.rich_text_area :rich_details, label: 'Détails', placeholder: "Ajoutez les détails si nécessaire" %>
  <%= f.input :requirements, :label => "Prérequis", placeholder: "Indiquez les prérequis nécessaires à la réalisation de cette tâche" %>
  <%= f.input :attachment, label: "Pièce jointe (facultatif)", as: :file, input_html: { id: 'attachment' } %>
  <%= f.submit "Valider", class:"btn-delete" %>
<% end %>
